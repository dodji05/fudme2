{% extends '@Admin/Default/index.html.twig' %}
{% block contenuprincipal %}
    <div class="row">
        <div class="col-12 pr-0">
            <div class="card px-1">
                <div class="text-center py-3">
                    Validation du projet : {{ projet.nomProjet }} sourmis par :
                    {% if projet.porteur.type.id == 1 %}
                        {{ projet.porteur.nom }} {{ projet.porteur.prenom }}
                    {% else %}
                        {{ projet.porteur.raisonSociale }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 pr-0">
            <div class="card px-1">
                <div class="text-center py-3">
                    <h4 class="form-section"><i class="ft-user"></i>
                        <div id="personne_info">Description du projet {{ projet.nomProjet }}</div> </h4>
                </div>
                {{ projet.descriptionProjet | raw }}
                        </div>
        </div>
        <div class="col-4 pr-0">
            <div class="card px-1">
                <div class="text-center py-3">

                    {{ form_start(form) }}
                    <div class="form-group">
                        <label> {{ form_label(form.objectif) }}</label>

                        {{ form_widget(form.objectif,{'attr':{'class': 'form-control','placeholder':'Objectif du financement a atteindre'}}) }}

                    </div>
                    {{ form_widget(form) }}
                    <br/>
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button class="btn btn-success" type="submit"><span class="glyphicon glyphicon-ok"></span> Valider le projet
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}