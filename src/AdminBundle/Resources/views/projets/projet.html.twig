{% extends '@Admin/Default/index.html.twig' %}

{% block contenuprincipal %}
    <section>
        <div class="row">
            <div class="col-12">
                <div class="card profile-with-cover">
                    {% for media in projet.media|slice(0,1)%}
                    <div class="card-img-top img-fluid bg-cover height-300" style="background: url('{{ asset ('uploads/admin/images/')}}{{ media.chemin  }}') 50%;"></div>
                    {% endfor %}
                </div>
                <div class="media profil-cover-details w-100">
                    <div class="media-left pl-2 pt-2">
                        <a href="#" class="profile-image">
                            <img src="{{ asset ('uploads/admin/images/')}}{{  projet.logo  }}" class="rounded-circle img-border height-100" alt="Card image">
                        </a>
                    </div>
                    <div class="media-body pt-3 px-2">
                        <div class="row">
                            <div class="col">

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="row">
            <div class="col-12">
                <div class="content-header">Presentation du projet</div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>{{ projet.nomProjet }}</h5>
                    </div>
                    <div class="card-body">
                        {{ projet.descriptionProjet|raw }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    
{% endblock %}
