<div class="row">
    <div class="col s12 m6 l3">

        <div class="card gradient-45deg-green-teal gradient-shadow min-height-100 white-text">
            <div class="padding-4">
                <div class="col s7 m7">
                    <i class="material-icons background-round mt-5">attach_money</i>
                    <p>Fonds recolt√©s</p>
                </div>
                <div class="col s5 m5 right-align">
                    <h5 class="mb-0">{{ montant_recolte|number_format(0, ' ', ' ') }}</h5>
                    <p class="no-margin">7 derniers jours</p>
                    {% set total = 0 %}
                    {% for projet in projets %}
                        {% set total = total + projet.montant %}
                    {% endfor %}
                    <p>{{ total|number_format(0, ' ', ' ') }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 m6 l3">
        <div class="card gradient-45deg-red-pink gradient-shadow min-height-100 white-text">
            <div class="padding-4">
                <div class="col s7 m7">
                    <i class="material-icons background-round mt-5">people_outline</i>
                    <p>Nombre de vues</p>
                </div>
                <div class="col s5 m5 right-align">
                    <h5 class="mb-0">1885</h5>
                    <p class="no-margin">7 derniers jours</p>
                    <p>1,12,900</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 m6 l3">
        <div class="card gradient-45deg-amber-amber gradient-shadow min-height-100 white-text">
            <div class="padding-4">
                <div class="col s7 m7">
                    <i class="material-icons background-round mt-5">school</i>
                    <p>Projets</p>
                </div>
                <div class="col s5 m5 right-align">
                    <h5 class="mb-0">80%</h5>
                    <p class="no-margin">En cours de financement</p>
                    <p>3,42,230</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 m6 l3">
        <div class="card gradient-45deg-light-blue-cyan gradient-shadow min-height-100 white-text">
            <div class="padding-4">
                <div class="col s7 m7">
                    <i class="material-icons background-round mt-5">add_shopping_cart</i>
                    <p>Orders</p>
                </div>
                <div class="col s5 m5 right-align">
                    <h5 class="mb-0">690</h5>
                    <p class="no-margin">New</p>
                    <p>6,00,00</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="sales-chart">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content">
                    <h4 class="header mt-0"> Dix derniers dons </h4>
                    <table  class="striped responsive-table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Date</th>
                            <th>Projet</th>
                            <th>Montant</th>
                        </tr>
                        </thead>
                        <tbody>

                       {% for projet in projets %}
                           <tr>
                               <td>{{ loop.index }}</td>
                               <td>{{ projet.dateDons|date('d-m-Y') }}</td>
                               <td> {{ projet.projet.nomProjet }}</td>
                               <td> {{ projet.montant|number_format(0, ' ', ' ')}}</td>
                           </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
</div>