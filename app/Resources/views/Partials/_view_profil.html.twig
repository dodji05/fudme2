<div style="margin-bottom: 62px"></div>

<div class="row">
    <div class="col s8 m6 l8">
        <div class="cards">
            <div class="card-header" data-background-color="purple">
                <h4 class="title" style="font-size: 14px !important;">Mon Profile</h4>
                <p class="category" style="font-size: 12px !important;">Mes informations</p>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class=" col s12 m6 l6">
                   <p>Nom d'utilisateur:  {{ user.username }} </p>
                    </div>
                    <div class="col s12 m6 l6">
                        <p>Adresse mail:  {{ user.email }} </p>
                    </div>
                </div>
