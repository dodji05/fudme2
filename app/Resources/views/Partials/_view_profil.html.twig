                    </div>
                    <div class="col s12 m6 l6">
                        <p>Pays:  {{ user.pays }} </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 m6 l6">
                        <p>Adresse:  {{ user.adresse }} </p>
                    </div>
                    <div class="col s12 m6 l6">
                        <p>Telephone:  {{ user.telephone }} </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12 m6 l6">
                        <p> Ma photo :</p>
                 <img src="{{ asset ('uploads/admin/images/')}}{{user.photo   }}">
