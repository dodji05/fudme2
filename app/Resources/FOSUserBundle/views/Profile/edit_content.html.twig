{% trans_default_domain 'FOSUserBundle' %}

{% extends '@Acteur/public/Template/Materialize/layout.html.twig' %}
{% block stylesheet %}
    <style>
        .card-profile,
        .card-testimonial {
            margin-top: 30px;
            text-align: center;
        }

        .card-profile .btn-just-icon.btn-raised,
        .card-testimonial .btn-just-icon.btn-raised {
            margin-left: 6px;
            margin-right: 6px;
        }
        .card-profile .card-avatar+.content,
        .card-testimonial .card-avatar+.content {
            margin-top: 15px;
        }
        .cards img {
            width: 100%;
            height: auto;
        }

        .card-profile .card-avatar,
        .card-testimonial .card-avatar {
            max-width: 130px;
            max-height: 130px;
            margin: -50px auto 0;
            border-radius: 50%;
            overflow: hidden;
            box-shadow: 0 10px 30px -12px rgba(0, 0, 0, 0.42), 0 4px 25px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 0, 0, 0.2);
        }

        .card-profile .card-avatar+.content,
        .card-testimonial .card-avatar+.content {
            margin-top: 15px;
        }

        .card-profile.card-plain .card-avatar,
        .card-testimonial.card-plain .card-avatar {
            margin-top: 0;
        }
        .card-profile .card-avatar+.content,
        .card-testimonial .card-avatar+.content {
            margin-top: 15px;
        }
        .cards .card-header {
            box-shadow: 0 10px 30px -13px rgba(0, 0, 0, 0.42), 0 4px 25px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 0, 0, 0.2);
            margin: -25px 15px 0;
            border-radius: 3px;
            padding: 15px;
            background-color: #999999;
        }
        .cards .card-header.card-chart+.content h4 {
            margin-top: 0;
        }
        .cards {
            display: inline-block;
            position: relative;
            width: 100%;
            margin: 25px 0;
            box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.14);
            border-radius: 3px;
            color: rgba(0, 0, 0, 0.87);
            background: #fff;
        }
        .cards .card-content {
            padding: 15px 20px;
        }
        .cards .card-header.card-chart+.content h4 {
            margin-top: 0;
        }

        .cards .card-content .category {
            margin-bottom: 0;
        }
        .cards .card-header .title {
            color: #FFFFFF;
        }

        .cards .card-header .category {
            margin-bottom: 0;
            color: rgba(255, 255, 255, 0.62);
        }

        .cards .card-content .category {
            margin-bottom: 0;
        }


    </style>
{% endblock %}
{% block menu %}
    {% include'@Acteur/Promotteurs/Partials/_nemu.html.twig' %}
{% endblock %}
{% block contenuprincipal %}
{% include ':Partials:_edit_profil.html.twig' %}
{% endblock %}
